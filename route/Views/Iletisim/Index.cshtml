@model randevu.Models.Email

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>İletişim</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
</head>
<style>
    a.btn-primary.btn-lg {
        text-decoration: none;
    }

    a.nav-link {
        text-decoration: none;
    }

    a.navbar-brand {
        text-decoration: none;
    }

    a.btn.btn-primary {
        text-decoration: none;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/AracTabloes/Index">İstanbul Otomotiv</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">

                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/AracTabloes/Index">Araçlar</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Iletisim/Index">İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>



    <header class="jumbotron my-4" style=" background-image: url(/Images/fm.jpg); background-size:100%;">
        <h1 class="display-3">İstanbul Otomotiv</h1>

        <p class="lead">Ekibimiz Lider Ve Öncü Bir Firmadır.</p>
        <a href="/Iletisim/Index" class="btn-primary btn-lg">Bizimle İletişime Geç!</a>
    </header>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Mesaj</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.AdveSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.AdveSoyad, new { htmlAttributes = new { @class = "form-control" } })

                    @Html.ValidationMessageFor(model => model.AdveSoyad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Konu, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Konu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Konu, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mesaj, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.TextAreaFor(model => model.Mesaj, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mesaj, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-4">
                    <input type="submit" value="Gönder" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div class="alert">@TempData["Message"]</div>

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2020</p>
        </div>

    </footer>
</body>
</html>
