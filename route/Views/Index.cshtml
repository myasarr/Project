@model IEnumerable<randevu.Models.Arac_tbl>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/stilim.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
</head>
<style>
    a.btn-primary.btn-lg {
        text-decoration: none;
    }

    a.nav-link {
        text-decoration: none;
    }

    a.navbar-brand {
        text-decoration: none;
    }

    a.btn.btn-primary {
        text-decoration: none;
    }

    header.jumbotron.my-4 {
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/AracTabloes/Index">İstanbul Otomotiv</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">

                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/AracTabloes/Index">Araçlar</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/AracTabloesYonet1/Index">Admin Giriş</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/Iletisim/Index">İletişim</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <header class="jumbotron my-4" style=" background-image: url(/Images/fm.jpg); background-size:100%;">
        <h1 class="display-3">İstanbul Otomotiv</h1>

        <p class="lead">Ekibimiz Lider Ve Öncü Bir Firmadır.</p>
        <a href="/Iletisim/Index" class="btn-primary btn-lg">Bizimle İletişime Geç!</a>
    </header>


    <h3>Araç Listesi</h3>
    <table class="table table-dark" border="1" cellpadding="5" cellspacing="0">
        <tr>
            <th>Resim</th>
            <th>
                MARKA
            </th>
            <th>
                MODEL
            </th>
            <th>
                MODEL YILI
            </th>
            <th>
                YAKIT
            </th>
            <th>
                VİTES
            </th>
            <th>
                FİYAT
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="border-dark">
                <td>
                    @{
                        var dir = "~/Images/" + item.AracId + ".jpg";

                        string FolderPath = Path.Combine(Server.MapPath(dir));
                        if (System.IO.File.Exists(FolderPath))
                        {
                            <img src="@Url.Content(dir)" width="100" />
                        }

                    }
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.Marka)
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.ModelYili)
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.Yakit)
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.Vites)
                </td>
                <td class="border-dark">
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>
                <td class="border-dark">

                    @Html.ActionLink("Detay", "Details", new { id = item.AracId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Rezervasyon Yap", "Rezervation", new { id = item.AracId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
    

    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; Your Website 2020</p>
        </div>

    </footer>
</body>
</html>
